@model List<Library.WebApp.Models.BookDto>
@{
    ViewData["Title"] = "Libros";
}

<div class="container mt-4">
    <h2>Libros</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (ViewBag.Ok != null)
    {
        <div class="alert alert-success">@ViewBag.Ok</div>
    }

    <div class="card mb-3">
        <div class="card-header">Registrar libro</div>
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div class="row g-2">
                    <div class="col-md-3">
                        <input class="form-control" name="Title" placeholder="Título" required />
                    </div>
                    <div class="col-md-3">
                        <input class="form-control" name="Author" placeholder="Autor" required />
                    </div>
                    <div class="col-md-3">
                        <input class="form-control" name="Isbn" placeholder="ISBN" required />
                    </div>
                    <div class="col-md-2">
                        <input class="form-control" name="Stock" type="number" min="0" placeholder="Stock" required />
                    </div>
                    <div class="col-md-1 d-grid">
                        <button class="btn btn-primary">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Autor</th>
                <th>ISBN</th>
                <th>Stock</th>
                <th style="width:180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.Title</td>
                    <td>@b.Author</td>
                    <td>@b.Isbn</td>
                    <td>@b.Stock</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@b.Id">Editar</a>

                        <form method="post" asp-action="Delete" asp-route-id="@b.Id" style="display:inline;">
                            <button class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar libro?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-outline-secondary" asp-controller="Loans" asp-action="Index">
        Ir a Préstamos
    </a>
</div>
